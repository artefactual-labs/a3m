{
  "$id": "https://a3m.readthedocs.io/workflow/schema/v1.json",
  "$schema": "http://json-schema.org/draft-06/schema#",
  "additionalProperties": false,
  "definitions": {
    "job_status": {
      "enum": [
        "Completed successfully",
        "Failed"
      ],
      "type": "string"
    },
    "link": {
      "additionalProperties": false,
      "properties": {
        "config": {
          "oneOf": [
            {
              "$ref": "#/definitions/link_model_StandardTaskFile"
            },
            {
              "$ref": "#/definitions/link_model_StandardTaskDir"
            },
            {
              "$ref": "#/definitions/link_model_LinkChoice"
            }
          ]
        },
        "description": {
          "$ref": "#/definitions/translations"
        },
        "end": {
          "type": "boolean"
        },
        "exit_codes": {
          "additionalProperties": {
            "properties": {
              "job_status": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/job_status"
                  },
                  {
                    "type": "null"
                  }
                ]
              },
              "link_id": {
                "oneOf": [
                  {
                    "$ref": "#/definitions/uuid"
                  },
                  {
                    "type": "null"
                  }
                ]
              }
            },
            "type": "object"
          },
          "minProperties": 0,
          "type": "object"
        },
        "fallback_job_status": {
          "oneOf": [
            {
              "$ref": "#/definitions/job_status"
            },
            {
              "type": "null"
            }
          ]
        },
        "fallback_link_id": {
          "oneOf": [
            {
              "$ref": "#/definitions/uuid"
            },
            {
              "type": "null"
            }
          ]
        },
        "group": {
          "$ref": "#/definitions/translations"
        },
        "start": {
          "type": "boolean"
        }
      },
      "required": [
        "config",
        "exit_codes",
        "fallback_job_status",
        "fallback_link_id",
        "description",
        "group"
      ],
      "type": "object"
    },
    "link_model_LinkChoice": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerChoice",
          "type": "string"
        },
        "choices": {
          "items": {
            "additionalProperties": true,
            "properties": {
              "link_id": {
                "$ref": "#/definitions/uuid"
              },
              "value": {
                "type": "boolean"
              }
            },
            "required": [
              "value",
              "link_id"
            ],
            "type": "object"
          },
          "minItems": 1,
          "type": "array"
        },
        "config_attr": {
          "type": "string"
        },
        "default": {
          "type": "boolean"
        }
      },
      "required": [
        "@manager",
        "config_attr",
        "default",
        "choices"
      ],
      "type": "object"
    },
    "link_model_StandardTaskDir": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerDirectories",
          "type": "string"
        },
        "arguments": {
          "type": [
            "string",
            "null"
          ]
        },
        "execute": {
          "type": "string"
        },
        "filter_file_end": {
          "type": [
            "string",
            "null"
          ]
        },
        "filter_file_start": {
          "type": [
            "string",
            "null"
          ]
        },
        "filter_subdir": {
          "type": [
            "string",
            "null"
          ]
        },
        "stderr_file": {
          "type": [
            "string",
            "null"
          ]
        },
        "stdout_file": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "@manager",
        "execute",
        "arguments",
        "filter_file_start",
        "filter_file_end",
        "filter_subdir",
        "stdout_file",
        "stderr_file"
      ],
      "type": "object"
    },
    "link_model_StandardTaskFile": {
      "additionalProperties": false,
      "properties": {
        "@manager": {
          "pattern": "linkTaskManagerFiles",
          "type": "string"
        },
        "arguments": {
          "type": [
            "string",
            "null"
          ]
        },
        "execute": {
          "type": "string"
        },
        "filter_file_end": {
          "type": [
            "string",
            "null"
          ]
        },
        "filter_file_start": {
          "type": [
            "string",
            "null"
          ]
        },
        "filter_subdir": {
          "type": [
            "string",
            "null"
          ]
        },
        "stderr_file": {
          "type": [
            "string",
            "null"
          ]
        },
        "stdout_file": {
          "type": [
            "string",
            "null"
          ]
        }
      },
      "required": [
        "@manager",
        "execute",
        "arguments",
        "filter_file_start",
        "filter_file_end",
        "filter_subdir",
        "stdout_file",
        "stderr_file"
      ],
      "type": "object"
    },
    "translations": {
      "additionalProperties": false,
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z]{2,3}([-_/][a-zA-Z]{2,3})?$": {
          "type": "string"
        }
      },
      "required": [
        "en"
      ],
      "type": "object"
    },
    "uuid": {
      "pattern": "^[0-9a-f]{8}-[0-9a-f]{4}-[1-5][0-9a-f]{3}-[89ab][0-9a-f]{3}-[0-9a-f]{12}$",
      "type": "string"
    }
  },
  "description": "In-progress JSON Schema document for Archivematica JSON-encoded workflows.",
  "properties": {
    "links": {
      "additionalProperties": {
        "$ref": "#/definitions/link"
      },
      "type": "object"
    }
  },
  "required": [
    "links"
  ],
  "title": "a3m Workflow JSON Schema",
  "type": "object"
}
